<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TableLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:stretchColumns="1">
		<TableRow android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<Button android:id="@+id/ibtn_settings_voice_goadvanced"
				style="@style/settings_voice_textstyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/btn_settings_voice_goadvanced_caption" />
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<ImageButton android:id="@+id/ibtn_settings_voice_close"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:gravity="right"
				android:src="@drawable/close" />
		</TableRow>
	</TableLayout>
	<Button style="@style/settings_voice_textstyle"
		android:textColor="#F00"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/ibtn_settings_voice_tts" android:text="@string/btn_settings_voice_tts_caption"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:gravity="center"
		android:text="@string/tv_settings_voice_ttsdescription"
		android:layout_gravity="center"
		android:paddingBottom="5px"/>
	<TableLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:stretchColumns="0,2" android:layout_marginTop="20px">
		<TableRow android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<CheckBox
				android:id="@+id/chk_settings_voice_directionvoice"
				style="@style/settings_voice_textstyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/chk_settings_voice_directionvoice_caption" />
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</TableRow>
		<TableRow android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<CheckBox android:id="@+id/chk_settings_voice_menuvoice"
				style="@style/settings_voice_textstyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/chk_settings_voice_menuvoice_caption" />
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</TableRow>
	</TableLayout>
	<TextView android:id="@+id/tv_settings_voice_quickinfo"
		style="@style/settings_quickinfo_textstyle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
		android:text="@string/tv_settings_voice_quickinfo_menuvoice_default" />
</LinearLayout>