<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TableLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"	
		android:stretchColumns="0">
		<TableRow 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				style="@style/sd_quickinfo_textstyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:src="@drawable/close" android:id="@+id/ibtn_settings_routeviewing_close"/>
		</TableRow>
	</TableLayout>
	<CheckBox 
		android:id="@+id/chk_settings_routeviewing_enable"
	    android:layout_gravity="center_horizontal"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chk_settings_routeviewing_maxlevel_enabled_caption" />
	<TextView 
		style="@style/small_textstyle"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tv_settings_routeviewing_maxlevel_caption"
        android:paddingLeft="20px" 
        android:paddingRight="20px" />
	<Spinner 
		android:id="@+id/spin_settings_routeviewing_maxlevel"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20px" 
        android:paddingRight="20px" />
	<CheckBox 
		android:id="@+id/chk_settings_routeviewing_snaptoroute_enable"
	    android:layout_gravity="center_horizontal"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chk_settings_routeviewing_snaptoroute_enabled_caption" />
	<TextView 
		style="@style/small_textstyle"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tv_settings_routeviewing_snaptoroute_caption"
        android:paddingLeft="20px" 
        android:paddingRight="20px" />
	<Spinner 
		android:id="@+id/spin_settings_routeviewing_snaptoroute_radius"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20px" 
        android:paddingRight="20px" />
</LinearLayout>