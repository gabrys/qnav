<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:id="@+id/ibtn_settings_directionvoice_testtts"
			style="@style/settings_voice_textstyle"
			android:textColor="#F00"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/btn_settings_voice_tts_caption" />
		<TextView
			android:layout_width="0dip"
			android:layout_height="0dip"
			android:layout_weight="1"/>
		<ImageButton
			android:id="@+id/ibtn_settings_directionvoice_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/close" />
	</LinearLayout>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:gravity="center"
		android:text="@string/tv_settings_voice_ttsdescription"
		android:layout_gravity="center"
		android:paddingBottom="5px"/>
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scrollbarSize="12dip">
		<TableLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:stretchColumns="1">
			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="@string/tv_settings_directionvoice_column_in" />
				<TextView
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="@string/tv_settings_directionvoice_column_saywhat" />
			</TableRow>

			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_settings_directionvoice_50"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<Spinner
					android:id="@+id/spin_settings_directionvoice_50_dist"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>


			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_settings_directionvoice_100"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<Spinner
					android:id="@+id/spin_settings_directionvoice_100_dist"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>


			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_settings_directionvoice_200"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<Spinner
					android:id="@+id/spin_settings_directionvoice_200_dist"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>


			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_settings_directionvoice_500"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<Spinner
					android:id="@+id/spin_settings_directionvoice_500_dist"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>


			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_settings_directionvoice_1k"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
				<Spinner
					android:id="@+id/spin_settings_directionvoice_1k_dist"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>


			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_settings_directionvoice_2k"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<Spinner
					android:id="@+id/spin_settings_directionvoice_2k_dist"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>


			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_settings_directionvoice_5k"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<Spinner
					android:id="@+id/spin_settings_directionvoice_5k_dist"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>


			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_settings_directionvoice_10k"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<Spinner
					android:id="@+id/spin_settings_directionvoice_10k_dist"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>


			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_settings_directionvoice_25k"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<Spinner
					android:id="@+id/spin_settings_directionvoice_25k_dist"
					style="@style/settings_directionvoice_textstyle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>
		</TableLayout>
	</ScrollView>
</LinearLayout>