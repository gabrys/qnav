<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/tv_settings_screenorientation_quickinfo"
			style="@style/sd_quickinfo_textstyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:text="@string/tv_settings_screenorientation_quickinfo_default" />
		<ImageButton
			android:id="@+id/ibtn_settings_screenorientation_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/close"/>
	</LinearLayout>
	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:stretchColumns="0,1">
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<ImageButton
				android:id="@+id/ibtn_settings_screenorientation_sensor"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="20px"
				android:paddingBottom="20px"
				android:src="@drawable/screenorientation_sensor"/>
			<ImageButton
				android:id="@+id/ibtn_settings_screenorientation_user"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="20px"
				android:paddingBottom="20px"
				android:src="@drawable/screenorientation_user"/>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" >
			<ImageButton
				android:id="@+id/ibtn_settings_screenorientation_landscape"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="20px"
				android:paddingBottom="20px"
				android:src="@drawable/screenorientation_landscape" />
			<ImageButton
				android:id="@+id/ibtn_settings_screenorientation_portrait"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="20px"
				android:paddingBottom="20px"
				android:src="@drawable/screenorientation_portrait" />
		</TableRow>
	</TableLayout>
</LinearLayout>