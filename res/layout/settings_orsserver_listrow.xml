<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<LinearLayout 
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="2px"
		android:paddingRight="5px">
		<ImageView
			android:id="@+id/iv_settings_orsserver_listrow_coverageflag"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:src="@drawable/unknown" />
	</LinearLayout>
	<LinearLayout 
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tv_settings_orsserver_listrow_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textSize="20sp"
			android:text="@string/unknown" />
		<LinearLayout 
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="10sp"
				android:text="@string/tv_settings_orsserver_listrow_location" />
			<ImageView
				android:id="@+id/iv_settings_orsserver_listrow_locationflag"
				android:layout_width="34px"
				android:layout_height="24px"
				android:src="@drawable/unknown"
				android:paddingRight="5px"
				android:paddingLeft="5px" 
				android:scaleType="fitXY"/>
			<TextView
				android:id="@+id/tv_settings_orsserver_listrow_location"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="12sp"
				android:text="@string/unknown" />
		</LinearLayout>
		<LinearLayout 
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="10sp"
				android:text="@string/tv_settings_orsserver_listrow_status" />
			<ImageView
				android:id="@+id/iv_settings_orsserver_listrow_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/status_orsserver_unknown"/>
			<TextView
				android:id="@+id/tv_settings_orsserver_listrow_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="5px"
				android:textSize="12sp"
				android:text="@string/unknown" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="20px"
				android:layout_gravity="center"
				android:textSize="10sp"
				android:text="@string/tv_settings_orsserver_listrow_latency" />
			<TextView
				android:id="@+id/tv_settings_orsserver_listrow_latency"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="12sp"
				android:text="@string/unknown" />
		</LinearLayout>
	</LinearLayout>
	
</LinearLayout>