	public static String htmlDecode(final String input){
		return input.replace("&quot;", "\"")
		.replace("&gt;", ">")
		.replace("&lt;", "<")
		.replace("&nbsp;", " ");
	}

	public static String htmlEncode(final String input){
		return input.replace("\"", "&quot;")
		.replace(">", "&gt;")
		.replace("<", "&lt;")
		.replace(" ", "&nbsp;");
	}

